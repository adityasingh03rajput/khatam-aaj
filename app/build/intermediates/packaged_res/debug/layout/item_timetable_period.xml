<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#2D2D2D">

    <!-- Fixed Period Info Column -->
    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#1E1E1E"
        android:padding="8dp">

        <TextView
            android:id="@+id/periodNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Period 1"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="#5D9CEC"
            android:gravity="center" />

        <TextView
            android:id="@+id/startTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00"
            android:textSize="12sp"
            android:textColor="#E0E0E0"
            android:layout_marginTop="8dp"
            android:padding="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to"
            android:textSize="10sp"
            android:textColor="#A0A0A0"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/endTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:00"
            android:textSize="12sp"
            android:textColor="#E0E0E0"
            android:layout_marginTop="4dp"
            android:padding="4dp" />

        <ImageButton
            android:id="@+id/deletePeriodButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/ic_menu_delete"
            android:backgroundTint="#ff6b6b"
            android:contentDescription="Delete Period"
            android:padding="8dp"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <!-- Scrollable Days Container -->
    <HorizontalScrollView
        android:id="@+id/daysScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <!-- Monday Column -->
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#1E1E1E"
            android:layout_margin="1dp"
            android:padding="8dp">

            <EditText
                android:id="@+id/mondaySubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Subject"
                android:textSize="13sp"
                android:textColor="#E0E0E0"
                android:textColorHint="#A0A0A0"
                android:padding="6dp"
                android:background="#2D2D2D"
                android:maxLines="1"
                android:inputType="text" />

            <EditText
                android:id="@+id/mondayRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Room"
                android:textSize="11sp"
                android:textColor="#E0E0E0"
                android:textColorHint="#A0A0A0"
                android:padding="6dp"
                android:layout_marginTop="4dp"
                android:background="#2D2D2D"
                android:maxLines="1"
                android:inputType="text" />

            <EditText
                android:id="@+id/mondayTeacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Teacher"
                android:textSize="11sp"
                android:textColor="#E0E0E0"
                android:textColorHint="#A0A0A0"
                android:padding="6dp"
                android:layout_marginTop="4dp"
                android:background="#2D2D2D"
                android:maxLines="1"
                android:inputType="text" />

        </LinearLayout>

        <!-- Tuesday Column -->
