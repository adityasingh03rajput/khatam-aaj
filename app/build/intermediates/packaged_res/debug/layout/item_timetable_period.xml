                android:maxLines="1"
                android:inputType="text" />

        </LinearLayout>

        <!-- Saturday Column -->
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#1E1E1E"
            android:layout_margin="1dp"
