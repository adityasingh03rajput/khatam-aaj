<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_variant"/>
            <corners android:radius="@dimen/button_radius"/>
            <stroke android:width="0dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_main"/>
            <corners android:radius="@dimen/button_radius"/>
            <stroke android:width="2dp" android:color="@color/focus_ring"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/text_disabled"/>
            <corners android:radius="@dimen/button_radius"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/primary_main"
                android:endColor="@color/primary_light"
                android:angle="135"/>
            <corners android:radius="@dimen/button_radius"/>
        </shape>
    </item>
</selector>
