<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Night Mode Theme -->
    <style name="Theme.LetsBunk" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background_night</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Action bar -->
        <item name="actionBarStyle">@style/ActionBar.LetsBunk</item>
        
        <!-- Card style -->
        <item name="materialCardViewStyle">@style/Card.LetsBunk</item>
        
        <!-- Button style -->
        <item name="materialButtonStyle">@style/Button.LetsBunk</item>
    </style>
</resources>
