<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Application Theme (Day Mode) -->
    <style name="Theme.LetsBunk" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Action bar -->
        <item name="actionBarStyle">@style/ActionBar.LetsBunk</item>
        
        <!-- Card style -->
        <item name="materialCardViewStyle">@style/Card.LetsBunk</item>
        
        <!-- Button style -->
        <item name="materialButtonStyle">@style/Button.LetsBunk</item>
    </style>
    
    <!-- Action Bar Style -->
    <style name="ActionBar.LetsBunk" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/primary</item>
        <item name="titleTextStyle">@style/ActionBar.Title</item>
    </style>
    
    <style name="ActionBar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Card Style -->
    <style name="Card.LetsBunk" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- Button Style -->
    <style name="Button.LetsBunk" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="Button.LetsBunk.Success">
        <item name="backgroundTint">@color/success</item>
    </style>
    
    <style name="Button.LetsBunk.Warning">
        <item name="backgroundTint">@color/warning</item>
    </style>
    
    <style name="Button.LetsBunk.Error">
        <item name="backgroundTint">@color/error</item>
    </style>
</resources>
