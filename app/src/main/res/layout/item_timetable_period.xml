                    android:background="@android:color/transparent"
                    android:maxLines="1" />

                <EditText
                    android:id="@+id/fridayTeacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Teacher"
                    android:textSize="9sp"
                    android:padding="2dp"
                    android:background="@android:color/transparent"
                    android:maxLines="1" />

            </LinearLayout>

            <!-- Saturday Column -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border_gray"
                android:padding="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saturday"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:background="@color/header_background"
                    android:padding="2dp" />

                <EditText
                    android:id="@+id/saturdaySubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Subject"
                    android:textSize="10sp"
                    android:padding="2dp"
                    android:background="@android:color/transparent"
                    android:maxLines="1" />

                <EditText
                    android:id="@+id/saturdayRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Room"
                    android:textSize="9sp"
                    android:padding="2dp"
                    android:background="@android:color/transparent"
                    android:maxLines="1" />

                <EditText
                    android:id="@+id/saturdayTeacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Teacher"
                    android:textSize="9sp"
                    android:padding="2dp"
                    android:background="@android:color/transparent"
                    android:maxLines="1" />

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
