{
  "name": "letsbunk-server",
  "version": "1.0.0",
  "description": "Real-time attendance and timetable management server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db": "node scripts/databaseManager.js",
    "db:init": "node scripts/databaseManager.js init",
    "db:seed": "node scripts/databaseManager.js seed",
    "db:backup": "node scripts/databaseManager.js backup",
    "db:verify": "node scripts/databaseManager.js verify",
    "db:reset": "node scripts/databaseManager.js reset --confirm"
  },
  "keywords": [
    "attendance",
    "timetable",
    "websocket",
    "realtime"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mongoose": "^8.18.3",
    "multer": "^2.0.2",
    "socket.io": "^4.6.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
